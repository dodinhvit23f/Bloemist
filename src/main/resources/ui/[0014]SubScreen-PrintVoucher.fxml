<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="302.0" prefWidth="305.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.bloemist.controllers.order.OrderPrintControllers">
   <children>
      <ImageView fx:id="logoImg" fitHeight="99.0" fitWidth="200.0" layoutX="53.0" layoutY="14.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../Img/logo.png" />
         </image>
      </ImageView>
      <Button fx:id="cancelPrint" layoutX="37.0" layoutY="246.0" mnemonicParsing="false" onAction="#cancel" prefHeight="25.0" prefWidth="98.0" text="Hủy" />
      <Button layoutX="173.0" layoutY="246.0" mnemonicParsing="false" onAction="#applyPrint" prefHeight="25.0" prefWidth="98.0" text="In hóa đơn" />
      <ChoiceBox fx:id="choicePrinter" layoutX="36.0" layoutY="124.0" prefHeight="25.0" prefWidth="235.0" />
      <RadioButton fx:id="heatBill" layoutX="38.0" layoutY="172.0" mnemonicParsing="false" text="In bill nhiệt">
         <toggleGroup>
            <ToggleGroup fx:id="bill" />
         </toggleGroup></RadioButton>
      <RadioButton fx:id="imageBill" layoutX="173.0" layoutY="203.0" mnemonicParsing="false" text="In ảnh mẫu" />
      <RadioButton fx:id="a5Bill" layoutX="173.0" layoutY="172.0" mnemonicParsing="false" selected="true" text="In A5" toggleGroup="$bill" />
   </children>
</AnchorPane>
